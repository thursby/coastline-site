<script>
  var videos = [
  {% for news in newslist | reverse %}
      {% if news.data.youtube_id %}
      { videoURL: '{{news.data.youtube_id}}',
        containment:'self',
        showControls: false,
        mute: true,
        startAt: {{news.data.youtube_start_at}},
        stopAt: {{news.data.youtube_stop_at}},
        autoPlay: true,
        loop: false,
        optimizeDisplay: true,
        opacity: 1,
        remember_last_time: false,
        mask: 'img/dark_vignette.png',
        showYTLogo:false,
        stopMovieOnBlur:false
      },
      {% endif %}
{% endfor %}
  ];
  // start the Primary YouTube video
  $(document).ready(function() {
      var vidPlayer = jQuery("#P1").YTPlaylist(videos, false);
  });
</script>