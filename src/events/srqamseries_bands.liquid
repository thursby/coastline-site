<style>

.bandname {
    font-size: 2rem;
    font-family: aileronultralight;
    font-weight: bold;
    margin-right: .5rem;
}

.hero-container{
  padding-top: 71px;
  width: 100%;
  text-align: center;
  overflow: hidden;
}
.hero-img{
  height: 100vh;
  position: relative;
  left: 50%;
  transform: translate(-50%,0);
}
</style>

<div class="hero-container">
<img src="{{ '/img/srqamseries-bands-hero.jpg' | url }}" class="hero-img d-block" alt="SRQ Am Series logo">
</div>

<div id="content-wrapper" style="padding-top: 1rem">
<div class="container">
{%- for band in collections.band -%}
  <div class="row">
    <div class="col-md-3">
      <img class="img-fluid" src="{{ '/img/' | append: band.data.posterImg | url }}" alt="{{ band.data.bandName }} Band Photo">
    </div>
    <div class="col-md-9">
      <div class="row align-items-center">
        {% if band.data.bandWebsite %}
        <a class="bandname" href="{{ band.data.bandWebsite }}" target="_blank">{{ band.data.bandName }}</a>
        {% else %}
        <span class="bandname">{{ band.data.bandName }}</span>
        {% endif %}       
        
        {% if band.data.url_insta %}
        <a href="{{ band.data.url_insta }}" target="_blank"><i data-feather="instagram" data-feather-height="32"></i></a>
        {% endif %}
        {% if band.data.url_fb %}
        <a href="{{ band.data.url_fb }}" target="_blank"><i data-feather="facebook" data-feather-height="32"></i></a>
        {% endif %}
        {% if band.data.url_twitter %}
        <a href="{{ band.data.url_twitter }}" target="_blank"><i data-feather="twitter" data-feather-height="32"></i></a>
        {% endif %}
        {% if band.data.url_youtube %}
        <a href="{{ band.data.url_youtube }}" target="_blank"><i data-feather="youtube" data-feather-height="32"></i></a>
        {% endif %}
        {% if band.data.url_music %}
        <a href="{{ band.data.url_music }}" target="_blank"><i data-feather="music" data-feather-height="32"></i></a>
        {% endif %}
      </div>
      <div class="row">
        {{ band.templateContent }}
      </div>
    </div>
  </div>
{%- endfor -%}
</div>
</div>